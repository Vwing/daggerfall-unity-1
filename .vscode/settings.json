{
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.gitignore": true,
        "**/.gitmodules": true,
        "**/*.booproj": true,
        "**/*.pidb": true,
        "**/*.suo": true,
        "**/*.user": true,
        "**/*.userprefs": true,
        "**/*.unityproj": true,
        "**/*.dll": true,
        "**/*.exe": true,
        "**/*.pdf": true,
        "**/*.mid": true,
        "**/*.midi": true,
        "**/*.wav": true,
        "**/*.gif": true,
        "**/*.ico": true,
        "**/*.jpg": true,
        "**/*.jpeg": true,
        "**/*.png": true,
        "**/*.psd": true,
        "**/*.tga": true,
        "**/*.tif": true,
        "**/*.tiff": true,
        "**/*.3ds": true,
        "**/*.3DS": true,
        "**/*.fbx": true,
        "**/*.FBX": true,
        "**/*.lxo": true,
        "**/*.LXO": true,
        "**/*.ma": true,
        "**/*.MA": true,
        "**/*.obj": true,
        "**/*.OBJ": true,
        "**/*.asset": true,
        "**/*.cubemap": true,
        "**/*.flare": true,
        "**/*.mat": true,
        "**/*.meta": true,
        "**/*.prefab": true,
        "**/*.unity": true,
        "build/": true,
        "Build/": true,
        "Library/": true,
        "library/": true,
        "obj/": true,
        "Obj/": true,
        "ProjectSettings/": true,
        "temp/": true,
        "Temp/": true
    },
    "files.associations": {
        "**/Assets/StreamingAssets/Quests/*.txt": "dftemplate",
        "**/Assets/StreamingAssets/QuestPacks/[a-zA-Z]*/**/*.txt": "dftemplate",
        "**/Assets/Game/Mods/**/Quests/*.txt": "dftemplate"
    },
    "[csharp]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "json.schemas": [
        {
            "fileMatch": [
                "*.dfmod.json"
            ],
            "url": "/Assets/Editor/.Schemas/ModInfo.schema.json"
        },
        {
            "fileMatch": [
                "**/Presets/*.json"
            ],
            "url": "/Assets/Editor/.Schemas/Preset.schema.json"
        },
        {
            "fileMatch": [
                "**/Books/Mapping/*.json"
            ],
            "url": "/Assets/Editor/.Schemas/BookMapping.schema.json"
        },
        {
            "fileMatch": [
                "ItemTemplates.json"
            ],
            "url": "/Assets/Editor/.Schemas/ItemTemplates.schema.json"
        },
        {
            "fileMatch": [
                "**/SpellIcons/*.json",
                "**/SpellIcons/*.txt"
            ],
            "url": "/Assets/Editor/.Schemas/SpellIcons.schema.json"
        }
    ],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "entity.name.variable.preprocessor.symbol.cs",
                "settings": {
                    "foreground": "#D4D4D4"
                }
            },
            {
                "scope": "punctuation.separator.hash.cs",
                "settings": {
                    "foreground": "#808080"
                }
            },
            {
                "scope": "string.unquoted.preprocessor.message.cs",
                "settings": {
                    "foreground": "#D4D4D4"
                }
            },
            {
                "scope": "entity.name.variable.property.cs",
                "settings": {
                    "foreground": "#D4D4D4"
                }
            },
            {
                "scope": "variable.other.object.cs",
                "settings": {
                    "foreground": "#4EC9B0"
                }
            },
            {
                "scope": "variable.other.object.property.cs",
                "settings": {
                    "foreground": "#D4D4D4"
                }
            }
        ]
    },
    "csharp.semanticHighlighting.enabled": true,
    "dotnet.defaultSolution": "dagerfall-unity.sln",
    "dotnet.server.useOmnisharp": true,
    "dotnet.preferCSharpExtension": true
}